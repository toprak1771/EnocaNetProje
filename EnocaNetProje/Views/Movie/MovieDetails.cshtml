@model EntityLayer.Concrete.Movie
@{
    ViewData["Title"] = "MovieDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
<h1>Movie Details</h1>
<hr />

<div class="card mb-3">
    <img src="@Model.Image" class="card-img-top" alt="image">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Director</p>
        <p class="card-text">@Model.Genre</p>
        <p class="card-text">@Model.Year</p>
        <p class="card-text">.........Movie content...........</p>
        @foreach (var item in Model.CinemaHalls)
        {
            <p class="card-text">@item.Name</p>
        }
    </div>
</div>